<Page
    x:Class="Course_Record.Frames.Command_Prompt"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Course_Record.Frames"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="Input" Foreground="White" FontFamily="Consolas" AcceptsReturn="True" TextWrapping="Wrap" Grid.Row="0" TextChanged="Input_TextChanged"/>
        <ScrollViewer x:Name="Scroller" Grid.Row="1">
            <TextBlock x:Name="Output" Foreground="White" FontFamily="Consolas" TextWrapping="Wrap"/>
        </ScrollViewer>
    </Grid>
</Page>
